{
  "rules": {
    "users": {
      "$uid": {
        ".read" : "auth !== null && auth.uid === $uid",
        "allCalendarIds" : {
          "$calendarId" : {
            ".write" : "auth !== null && auth.uid === $uid && (!data.exists() || root.child('calendars/' + $calendarId + '/writers/' + $uid).exists())",
            ".validate" : "newData.isString() && newData.val().length > 0 ",
              "$calendarTitle" : {
                ".validate" : "newData.isString() && newData.val().length > 0"
              }
          }
        },
        "currentActiveCalendar" : {
            ".write" : "auth !== null && auth.uid === $uid && (!data.exists() || root.child('calendars/' + newData.val() + '/writers/' + auth.uid).exists())",  
            ".validate" : "newData.isString() && newData.val().length > 0"
        }
      }
    },
    "calendars":{
      "$calendarId": {
        "calendarState": {
          ".read" : "auth !== null && (!data.exists() || root.child('calendars/' + $calendarId + '/readers/' + auth.uid).exists())",
          ".write" : "auth !== null && (!data.exists() || root.child('calendars/' +$calendarId + '/writers/' + auth.uid).exists())",
          "startDateString": {
            ".validate" : "newData.isString() && newData.val().length > 0 && newData.val().matches(/\\d{8}/)"
          },
          "endDateString": {
            ".validate" : "newData.isString() && newData.val().length > 0 && newData.val().matches(/\\d{8}/)"
          },
          "title":{
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 256"
          },
          "uniqueId" : {
            ".validate" : "newData.isString() && newData.val().length > 0"
          },
          "checkedDays" : {
            "$dateString" : {
              ".validate" : "newData.isString() && newData.val().length > 0 && newData.val().matches(/\\d{8}/)",
              "$dateStringVal" : {
                ".validate" : "newData.isString() && newData.val().length > 0 && newData.val().matches(/\\d{1}/)"
              }
            }
          }
       },
        "writers" : {
          ".write" : "auth !== null && (!data.exists() || root.child('calendars/' + $calendarId + '/writers/' + auth.uid).exists())",
          ".read": "auth !== null && (!data.exists() || root.child('calendars/' + $calendarId + '/writers/' + auth.uid).exists()) ",
          "$uid" : {
            ".validate": "newData.isString() && newData.val().length > 0"
          }
        },
        "readers" : {
          ".write" : "auth !== null && (!data.exists() || root.child('calendars/' + $calendarId + '/writers/' + auth.uid).exists())",
          ".read" : "auth !== null && (!data.exists() || root.child('calendars/' + $calendarId + '/writers/' + auth.uid).exists())",
          "$uid" : {
            ".validate" : "newData.isString() && newData.val().length > 0"
          }
        }
      }
    }
  }
}

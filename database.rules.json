{
  "rules": {
    "users": {
      "$uid": {
        ".read" : "auth !== null && auth.uid === $uid",
        ".write" : "auth !== null && auth.uid === $uid"
      }
    },
    "calendars":{
      "$calendarId": {
        "calendarState": {
          ".read" : "auth !== null && data.parent().child('read/' + auth.uid).exists()",
          ".write" : "auth !== null && data.parent().child('write/' + auth.uid).exists()"
        },
        "write" : {
          ".read" : "auth !== null && data.child(auth.uid).exists()",
          ".write" : "auth !== null && data.child(auth.uid).exists()"
        },
        "read" : {
          ".read" : "auth !== null && data.child(auth.uid).exists()",
          ".write" : "auth !== null && data.parent().child('write/' + auth.uid).exists()"
        }
      }
    }
  } 
}

{
  "rules": {
    "users": {
      "$uid": {
        ".read" : "auth !== null && auth.uid === $uid",
        ".write" : "auth !== null && auth.uid === $uid"
      }
    },
    "calendars":{
      "$calendarId": {
        "calendarState": {
          ".read" : "auth !== null",
          ".write" : "auth !== null && (!data.exists() || root.child('calendars/' +$calendarId + '/writers/' + auth.uid).exists())"
       },
        "writers" : {
          ".write" : "auth !== null && !data.exists()",
          ".read": "auth !== null"
        }
        "readers" : {
          ".write" : "auth !== null", 
          ".read" : "auth !== null"
        }
      }
    }
  }
}
